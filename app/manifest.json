{
  "name": "RTrack",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Email open tracker",
  "icons": {
    "16": "images/rmail_icon_16.png",
    "128": "images/rmail_icon_128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "inject/chromereload.js",
      "inject/background.js"
    ]
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*",
    "management",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://mail.google.com/*"
      ],
      "css": [
        "bower_components/bootstrap-switch/dist/css/bootstrap3/bootstrap-switch.min.css",
        "inject/inject.css"
      ],
      "js": [
        "bower_components/jquery/dist/jquery.min.js",
        "bower_components/handlebars/handlebars.min.js",
        "bower_components/bootstrap-sass/assets/javascripts/bootstrap.min.js",
        "bower_components/bootstrap-switch/dist/js/bootstrap-switch.min.js",
        "inject/contentscript.js",
        "inject/templates.js"
      ],
      "run_at": "document_end",
      "all_frames": false
    }
  ],
  "web_accessible_resources": [
    "inject/gmail.js",
    "inject/main.js",
    "bower_components/jquery/dist/jquery.min.js",
    "templates/send-registered-btn.hbs",
    "templates/rtrack-checkbox.hbs",
    "templates/rtrack-btn.hbs",
    "images/*.png",
    "images/*.svg"
  ],
  "page_action": {
    "default_icon": {
      "19": "images/rmail_icon_19.png",
      "38": "images/rmail_icon_38.png"
    },
    "default_title": "rtrack",
    "default_popup": "popup.html"
  }
}
